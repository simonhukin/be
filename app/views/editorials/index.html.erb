<h1>Listing editorials</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Meta</th>
    <th>Content</th>
    <th></th>
    <th></th>
  </tr>

<% @editorials.each do |editorial| %>
  <tr>
    <td><%= editorial.name %> </td>
    <td><%= editorial.meta %> </td>
    <td><%= editorial.title %> </td>
    <td><%= raw editorial.content %></td>
    <td><%= link_to 'Show', editorial %></td>
    <td><%= link_to 'Edit', edit_editorial_path(editorial) %></td>
  </tr>
<% end %>
</table>

